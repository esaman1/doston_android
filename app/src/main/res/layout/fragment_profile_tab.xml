<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Profile_F"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Profile.Profile_Tab_F">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="25dp"
        android:background="@color/black">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:background="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black">


                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="                                                              UserName"
                    android:id="@+id/username_title"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"/>


                <ImageButton
                    android:tint="@color/white"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_setting"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitCenter"
                    android:id="@+id/setting_btn"
                    android:background="@color/transparent"/>

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_above="@+id/bannerad"
            android:fillViewport="true"
            android:id="@+id/scrollview">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants">

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="25dp"
                         android:src="@drawable/ic_unknown"/>



                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="15dp"
                        app:cardBackgroundColor="@color/lightgraycolor">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 Video"

                            android:textColor="@color/dimgray"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:textSize="15dp"
                            android:textStyle="bold"/>
                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:textSize="18dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Following"
                                android:textStyle="bold"
                                android:textColor="@color/darkgray"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:textSize="13dp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:textSize="18dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Followers"
                                android:textStyle="bold"
                                android:textColor="@color/darkgray"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:textSize="13dp" />
                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:textSize="18dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Heart"
                                android:textStyle="bold"
                                android:textColor="@color/darkgray"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:textSize="13dp" />

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            android:id="@+id/edit_profile_btn"
                            android:background="@color/redcolor"
                            android:textColor="@color/white"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/gainsboro"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/top_layout"
                    android:padding="10dp"
                    android:background="@color/black"
                    android:orientation="vertical"
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <LinearLayout
                        android:padding="5dp"
                        android:weightSum="3"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:layout_margin="10dp"
                                app:cardCornerRadius="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:scaleType="centerCrop"
                                    android:background="@color/white"
                                    android:id="@+id/user_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_marginStart="10dp"
                            android:padding="5dp"
                            android:weightSum="4.3"
                            android:orientation="vertical"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:gravity="center_vertical"
                                android:id="@+id/username"
                                android:text="doll_mega_1"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"/>

                            <TextView
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="16sp"
                                android:gravity="center_vertical"
                                android:textColor="#8a8a8a"
                                android:id="@+id/fullname"
                                android:text="Megan Clyton"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"/>

                            <TextView
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="16sp"
                                android:gravity="center_vertical"
                                android:textColor="#8a8a8a"
                                android:id="@+id/video_count_txt"
                                android:text="0 Video"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"/>

                            <Button
                                android:visibility="gone"
                                android:id="@+id/follow_unfollow_btn"
                                 android:layout_gravity="center_vertical"
                                android:textColor="#a4a4a4"
                                android:text="follow"
                                android:background="@drawable/follow_button_bg"
                                android:layout_weight="1.3"
                                android:layout_width="130dp"
                                android:layout_height="0dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">



                        <LinearLayout
                            android:id="@+id/following_layout"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/follow_count_txt"
                                android:layout_marginBottom="3dp"
                                android:gravity="bottom|center"
                                android:textSize="18sp"
                                android:text="0"
                                android:textColor="@color/white"
                                android:layout_weight="1"
                                android:layout_width="100dp"
                                android:layout_height="0dp"/>

                            <TextView

                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:text="Following"
                                android:textColor="#848484"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/fans_layout"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_gravity="center"
                                android:id="@+id/fan_count_txt"
                                android:layout_marginBottom="3dp"
                                android:gravity="bottom|center"
                                android:textSize="18sp"

                                android:text="0"
                                android:textColor="@color/white"
                                android:layout_weight="1"
                                android:layout_width="100dp"
                                android:layout_height="0dp"/>

                            <TextView
                                android:textSize="16sp"
                                android:text="Followers"
                                android:textColor="#848484"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/heart_count_txt"
                                android:layout_marginBottom="3dp"
                                android:gravity="bottom|center"
                                android:textSize="18sp"
                                android:text="0"
                                android:textColor="@color/white"
                                android:layout_weight="1"
                                android:layout_width="100dp"
                                android:layout_height="0dp"/>

                            <TextView
                                android:textSize="16sp"
                                android:text="Likes"
                                android:textColor="#848484"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"/>

                        </LinearLayout>


                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_above="@+id/tabs_main_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/gainsboro"/>

                <RelativeLayout
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/tabs_main_layout"
                    android:layout_below="@+id/top_layout">

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_alignParentTop="true"
                        app:tabMode="fixed"
                        app:tabTextColor="@color/dimgray"
                        app:tabSelectedTextColor="@color/white"
                        android:gravity="center"
                        app:tabGravity="fill"
                        app:tabPaddingStart="0dp"
                        app:tabPaddingEnd="0dp"
                        app:tabIndicatorColor="@android:color/white"/>

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/pager"
                        android:layout_below="@+id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </RelativeLayout>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_margin="20dp"
            android:visibility="gone"
            android:animateLayoutChanges="true"
            android:id="@+id/create_popup_layout"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/popup_background">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="10dp"
                android:text="Tap + to create\n your first short video"/>
        </LinearLayout>


    </RelativeLayout>



</FrameLayout>